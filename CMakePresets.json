{
    "version": 6,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/tmp/${presetName}",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/bin/${presetName}",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": false,
                "APP": "elf2dfuse"
            }
        },
        {
            "name": "linux-x86_64",
            "description": "developer's host Linux",
            "inherits": "common",
            "toolchainFile": "${sourceDir}/cmake/x86_64-linux-gnu.cmake",
            "cacheVariables": {}
        },
        {
            "name": "win32-i686",
            "description": "retro Windows x32",
            "inherits": "common",
            "toolchainFile": "${sourceDir}/cmake/i686-w64-mingw32-win32.cmake",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/bin/${presetName}",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}
